      script(src="https://js.stripe.com/v3/")
  
  body
    // HEADER
    include _header
        
    // CONTENT
    .base_search

    block content
      .base_video_search
        .base_video_search_b
          form(action='/overview' method='GET')
            .form_box
              label(for='location') LOCATION
              input#location(type='text' name='location' required)
            .form_box
              label(for='startdate') CHECK-IN
              input(type='date' name='startdate' id='fromDate' max='' placeholder='Start Date' required)
            .form_box
              label(for='enddate') CHECK-OUT
              input(type='date' name='enddate' id='toDate' min='' placeholder='End Date' required)
            //- label(for='price[gte]')
            //- input#pricegreat(type='text' name='price[gte]' placeholder='Price Starting from')
            //- label(for='price[lte]')
            //- input#priceless(type='text' name='price[lte]' placeholder='Price Ending ')
            //- label(for='guests')
            //- input#guests(type='text' name='guests' placeholder='Total Guests')
            
            button.btn(type='submit') 
              i.fa.fa-search 
              span Search
        .base_video_search_a
          //- video( autoplay='autoplay' loop='true' controls src="/video/main.mp4" type='video/mp4' width='100%')
          video(width='100%'  autoplay='true' loop muted controls )
            source(src='/video/main.mp4' type='video/mp4')
        
      .base_online_main
        .base_online_main_details
          .base_online_main_details_left
            h2 Online experiences
            span Meet people all over the world while trying something new. Join live, interactive video sessions led by one-of-a-kind hosts – all without leaving home.
        .base_online_main_image
          .base_online_main_images_left
            a(href="#")
              img(src="./img/experiences/plant_doctor.jpeg", alt="")
              span Learn to propogate with Baltimore's "Plant Doctor"
          .base_online_main_images_right
            a.base_online_main_images_right_a(href="#")
              img.base_online_main_images_right_img(src="./img/experiences/meditate.jpeg", alt="")
              span
                span.base_online_main_images_right_span Stretch.Breathe.Relax
                br
                span.base_online_main_images_right_span Yoga class with friends 
            a.base_online_main_images_right_a(href="#")
              img.base_online_main_images_right_img(src="./img/experiences/penguin.jpeg", alt="")
              span.base_online_main_images_right_span Support African penguins 
        .base_online_main_background 
          .base_online_main_frontline
            .base_online_main_frontline_left
              h2 Host a hero: help to house frontline responders around the world
              a(href="#") Get involved
            .base_online_main_frontline_right
              p With frontline stays, Airbnb is partnering with our hosts to connect 100,000 healthcare providers, relief workers, and first responders with clean places to stay that allow them to be close to their patients – and safely distanced from their own families.

