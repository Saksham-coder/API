extends base

block content
    .searchbar_form
        form(action='/overview' method='GET')
            .searchbar_top
                .searchbar_top_input
                    label(for='name') Search By Hotel name 
                    input#name(type='text' name='name' placeholder='Search By Hotel name')
                .searchbar_top_input
                    label(for='location') Search By Location
                    input#location(type='text' name='location' placeholder='Enter Location')
                .searchbar_top_input
                    label(for='price[gte]') Price Starting
                    input#pricegreat(type='text' name='price[gte]' placeholder='Price Starting from')
                .searchbar_top_input
                    label(for='price[lte]') Price Ending
                    input#priceless(type='text' name='price[lte]' placeholder='Price Ending ')
                .searchbar_top_input
                    label(for='rooms') Room Required
                    input#room(type='text' name='rooms' placeholder='Room Required')
                .searchbar_top_input
                    label(for='startdate') Start Date
                    input#room(type='date' name='startdate' placeholder='Start Date')
                .searchbar_top_input
                    label(for='enddate') End Date
                    input#room(type='date' name='enddate' placeholder='End Date')
            .searchbar_button
                .button
                    button(type='submit') Search
    .overview_main
        .overview_mainleft
            .overview_staysplace
                    p= `${length} stays`
                    h2
                        if location === undefined
                            h2 Stays in India
                        else
                            - const locations = `Stays in ${location}`
                            h2= locations
            .overview_staysplace_clock_guidelines
                img(src="./img/clock.png", alt="")      
                p Check travel restrictions before booking.
                span  Please review and follow government travel guidelines
            each hotel in data
                .overview
                    a(href=`/overview/${hotel._id}`)
                        .overview_card
                            .overview_cardleft
                                img(src="https://images.pexels.com/photos/258154/pexels-photo-258154.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
                            .overview_cardright
                                .overview_cardrightfirst
                                    span.rightfirst= hotel.hotel_type
                                    span    
                                        img.rightfirstimage(src="data:image/png;base64,", alt="")
                                        span= hotel.ratingsAverage
                                        | 
                                        span (
                                        span= hotel.ratingsQuantity
                                        span )
                                .overview_cardrightsecond
                                    h3= hotel.summary
                                    span Air Conditioning , Kitchen , Wifi
                                .overview_cardrightthird
                                    span 
                                        span.boldrupee â‚¹
                                        span.boldrupee= hotel.price
                                        span.boldrupee /
                                        span night
            .overview_paginate
                        form.overview_paginate_form(action='/overview' method='GET')
                            label(for='page') Page Number
                            input#page(type='text' name='page' value=`${page}`)
                            button(type='submit') Search
                        if page*10 < length
                            span= `${page-1}1 - ${page*10} of ${length} places to stay`
                        else
                            span= `${page-1}1 - ${page*10-(page*10-length)} of ${length} places to stay`
                        p Enter dates to see full pricing. Additional fees apply. Taxes may be added.
        .overview_mainright
            .fixingmap
                - const hotels = []
                each hotel in data
                    //- -console.log(hotel)
                    - var taking_hotels = hotel.livelocation
                    //- -console.log(taking_hotels)
                    
                    - hotels.push(taking_hotels)
                    
                //- -console.log("all hotels location")
                //- -console.log(hotels)
                #mainmap(data-locations=`${JSON.stringify(hotels)}`)
            
