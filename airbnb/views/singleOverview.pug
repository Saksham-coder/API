doctype html
html
  head
    block head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel='stylesheet' href='/css/style.css')
        link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
        title Air | #{title}
        script(src='https://api.mapbox.com/mapbox-gl-js/v1.11.0/mapbox-gl.js')
        link(href='https://api.mapbox.com/mapbox-gl-js/v1.11.0/mapbox-gl.css' rel='stylesheet')
        script(src="https://js.stripe.com/v3/")

      
  
  body
    // HEADER
    include _header
        
    .singleOverview
        .singleOverview_topdetails
            h2= data.summary
            span    
                - const desc = `❤️ ${data.ratingsAverage}(${data.ratingsQuantity})  ${data.location} `
                span= desc
        .singleOverview_images
            .singleOverview_images_left
                img(src="https://images.pexels.com/photos/237371/pexels-photo-237371.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
            .singleOverview_images_right
                img(src="https://images.pexels.com/photos/53577/hotel-architectural-tourism-travel-53577.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
                img(src="https://images.pexels.com/photos/860922/pexels-photo-860922.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
                img(src="https://images.pexels.com/photos/1743231/pexels-photo-1743231.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
                img(src="https://images.pexels.com/photos/189333/pexels-photo-189333.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", alt="")
        
        .singleOverview_details_payment
            .singleOverview_details
                .singleOverview_details_first
                    -const details = `${data.hotel_type} hosted by ${data.host[0].username}`
                    .singleOverview_details_first_a
                        h3= details
                    .singleOverview_details_first_b
                        img(src=`/img/users/${data.host[0].photo}`, alt="")
                .singleOverview_details_second
                    h4 About your stay in hotel
                    p= data.description
                .singleOverview_details_bed
                    h4 Sleeping Arrangements
                    .singleOverview_details_bed_card
                        span
                            img.bedimage(src="data:image/png;base64,", alt="")
                            br
                            span Bedroom 1
                            br
                            span 1 King bed
                .singleOverview_details_third
                    p will implement amenities over here
                .singleOverview_details_fourth
                    - const reviewing = `❤️ ${data.ratingsAverage} (${data.ratingsQuantity} reviews)`
                    h3= s= reviewing
                    
                    each review in data.reviews
                        .review_card
                            .review_card_flex
                                .review_card_userimage
                                    img(src=`/img/users/${review.user.photo}`, alt="")
                                .review_card_userdetails
                                    span
                                        span.reviewboldusername= review.user.username
                                        br
                                        - const date = review.createdAt
                                        span= date
                            .review_card_review
                                span= review.review
                if user
                    .singleOverview_writeReview
                        form.reviewform(action=`/` method="post")
                            .form__review
                                label.form__label(for='review') Enter your experience if you ever have
                                br
                                input#review.form__input(type='text')
                            .form__review
                                label(for='rating') Choose a Rating:
                                select#rating(name='rating' )
                                    option(value='1') 1
                                    option(value='2') 2
                                    option(value='3') 3
                                    option(value='4') 4
                                    option(value='5') 5
                            span#id= user._id
                            span#idh= data._id
                            .form__review
                                button Post Review
            .singleOverview_payment
                    .boxShadowForm
                        .singleOverview_payment_top
                            h3= data.price
                            p /night
                            img(src="", alt="")
                            p= `${data.ratingsAverage}(${data.ratingsQuantity})`
                        .singleOverview_payment_form
                            form.form_payment_form
                                .form__grouppayment1
                                    .form__grouppayment1a.form-rightborder
                                        label(for='checkin') CHECK-IN
                                        input#checkin.form__input(type='date', placeholder='Add date')
                                    .form__grouppayment1a
                                        label(for='checkout') CHECK-OUT
                                        input#checkin.form__input(type='date', placeholder='Add date')
                                .form__grouppayment1b
                                    label(for='guests') Guests
                                    input#password.form__input(type='number', placeholder='guest')
                                .form__grouppayment.form-payment_button
                                    if user
                                        button#book-tour(data-hotel-id = data._id) Check availability
                                    else
                                        a(href="/login") Login
        .singleOverview_map
            #map(data-livelocation=`${JSON.stringify(data.livelocation)}`)
            img(src="", alt="")

        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
        script(src='/js/review.js')
        script(src='/js/mapbox.js')
        script(src='/js/logout.js')
        script(src='/js/stripe.js')

